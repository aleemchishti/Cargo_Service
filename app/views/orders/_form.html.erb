<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
<%= form_with(model: order) do |form| %>

  <br>
  <div class='form-group'>
    <%= form.label :sender_name,class:'form-label mb-2 mt-3' %>
    <%= form.text_field :sender_name, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :receiver_name, class:'form-label mb-2 mt-3',rows:'4',cols:'50' %>
    <%= form.text_field :receiver_name, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :destination, class:'form-label mb-2 mt-3',rows:'4',cols:'50' %>
    <%= form.text_field :destination, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :contact, class:'form-label mb-2 mt-3' %>
    <%= form.number_field :contact, class:'form-control form-control-lg'%>
  </div>
   <div class='form-group'>
    <%= form.label :weight, class:'form-label mb-2 mt-3' %>
    <%= form.number_field :weight, class:'form-control form-control-lg'%>
  </div>

  <br>

  <div>
    <%= form.submit class: "btn btn-primary"%>
    <%= link_to 'Back', orders_path, class: "btn btn-secondary"%>
  </div>
<% end %>
