  <%= form_for [:traveler,journey] do |form| %>

  <% if journey.errors.any? %>
    <div style="color: black">
      <h2><%= pluralize(journey.errors.count, "error") %> prohibited this journey from being saved:</h2>

      <ul>
        <% journey.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class='form-group'>
    <%= form.label :from,class:'form-label mb-2 mt-3' %>
    <%= form.text_field :from, class:'form-control form-control-sm' %>
  </div>

  <div class='form-group'>
    <%= form.label :to, class:'form-label mb-2 mt-3' %>
    <%= form.text_field :to, class:'form-control form-control-sm' %>
  </div>

  <div class='form-group'>
    <%= form.label :departure, class:'form-label mb-2 mt-3' %>
    <%= form.date_field :departure, class:'form-control form-control-sm' %>
  </div>

  <div class='form-group'>
    <%= form.label :rate, class:'form-label mb-2 mt-3' %>
    <%= form.number_field :rate, class:'form-control form-control-sm', min: 1 %>
  </div>

   <div class='form-group'>
    <%= form.label :capacity, class:'form-label mb-2 mt-3' %>
    <%= form.number_field :capacity, class:'form-control form-control-sm', min: 1 %>
  </div>

  <br>

  <div>
    <%= form.submit class: "btn btn-primary"%>
    <%= link_to 'Back', traveler_journeys_path, class: "btn btn-secondary"%>
  </div>
<% end %>
