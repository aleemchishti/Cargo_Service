<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <div class='container'> 
      <h1>List of Journeys</h1>
      <br>
      <table>
        <thead>
          <table class="w3-table-all">
          <tr class="w3-light-grey w3-hover-grey">
            <th>From</th>
            <th>To</th>
            <th>Departure</th>
            <th>Capacity KG</th>
            <th>Rate</th>
            <th colspan = '3'>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @journeys.each do |journey| %>
            <tr class="w3-hover-white">
            <td> <strong><%= journey.from %></strong></td>
            <td> <strong><%= journey.to%> </strong></td>
            <td> <%= journey.departure %> </td>
            <td> <strong><%= journey.capacity %></strong></td>
            <td> <strong><%= journey.rate %></strong></td>
            <td><%= link_to 'View',traveler_journey_url(journey), class: 'btn btn-light'%></td>  
            <td><%= link_to 'Delete',traveler_journey_url(journey), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>