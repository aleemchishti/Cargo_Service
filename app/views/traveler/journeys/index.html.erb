<div class='container'> 
  <h1>List of Journeys</h1>
  <br>
  <%= search_form_for @q, url:traveler_journeys_url do |form| %>
    <div class="form-group">
      <%= form.label :from%>
      <%= form.text_field :from_cont, class:'form-control form-control-sm'%>
    </div>

    <div class="form-group">
      <%= form.label :to%>
      <%= form.text_field :to_cont, class:'form-control form-control-sm'%>
    </div><br>

    <div class="form-group">
      <%= form.submit class:"btn btn-primary btn-lg"%>
    </div><br>
  <%end%>
  <table>
    <thead>
      <table class="w3-table-all">
      <tr class="w3-light-grey w3-hover-grey">
        <th>Traveler Name</th>
        <th>From</th>
        <th>To</th>
        <th>Departure</th>
        <th>Capacity KG</th>
        <th>Rate</th>
        <th colspan = '3'>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @journeys.each do |journey| %>
        <tr class="w3-hover-white">
        <td> <strong><%= journey.user.first_name %></strong></td>
        <td> <strong><%= journey.from %></strong></td>
        <td> <strong><%= journey.to%> </strong></td>
        <td> <%= journey.departure %> </td>
        <td> <strong><%= journey.capacity %></strong></td>
        <td> <strong><%= journey.rate %></strong></td>
        <td><%= link_to 'View',traveler_journey_url(journey), class: 'btn btn-light'%></td>  
        <td><%= link_to 'Delete',traveler_journey_url(journey), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>