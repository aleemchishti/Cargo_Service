<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<div class='container'>
	<h1>Courier Service</h1>

	<% if current_user %>
	<p>Hello <br><%=current_user.email%>!</p>
	<p>You are a [<%=current_user.role%>]</p>
	<% if current_user.admin? %>
		There are <%=User.count%> users in the system.
	<%end%>
	<p>
		Welcome to the Courier Service
	</p>
	<%= link_to 'Sign Out', destroy_user_session_path,data: {turbo_method: :delete},class:'btn btn-danger'	%>
	<%else%>
		<p> you are not signed-in.</p>
		<%=	link_to 'Sign-up',new_user_registration_path,class:'btn btn-primary'%> <br>
		<%= link_to 'Login',new_user_session_path,class:'btn btn-light' %>
		
	<%end%>
</div>