<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<div class='container'><br>
	<h1>Welcome to the Courier</h1><br>
	<% if current_user %>
		<h5>Hello,<strong><%=current_user.first_name%>!</strong></h5>
		<h6>You are a <strong><%=current_user.role%></strong></h6><br>	
		<%= link_to 'Sign Out', destroy_user_session_path,data: {turbo_method: :delete},class:'btn btn-danger'	%>
	<%else%>
		<p> you are not signed-in.</p>
		<%=	link_to 'Sign-up',new_user_registration_path,class:'btn btn-primary'%> <br>
		<%= link_to 'Login',new_user_session_path,class:'btn btn-light' %>	
	<%end%>
</div>